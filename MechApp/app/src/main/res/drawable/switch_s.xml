        android:width="62dp"
        android:height="34dp">

        <shape android:shape="rectangle">
            <solid android:color="@color/color_ffb923"/>
            <corners android:radius="@dimen/dp_17"/>
            <size android:width="62dp" android:height="34dp"/>
