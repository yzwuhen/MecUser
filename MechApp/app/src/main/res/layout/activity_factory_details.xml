<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_left_right_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_marginBottom="@dimen/dp_63"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="250dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="@dimen/dp_17">

                <TextView
                    android:id="@+id/tv_factory_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dp_17"
                    android:text="广州市莹宝维修中心"
                    android:textColor="@color/color_222"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/qy" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:src="@mipmap/jk_s" />
            </LinearLayout>

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/App_RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_10"
                android:numStars="5"
                android:rating="2.5" />

            <TextView
                android:id="@+id/tv_browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_17"
                android:drawableLeft="@mipmap/browse_icon"
                android:drawablePadding="@dimen/dp_10"
                android:text="浏览量：12940"
                android:textColor="@color/color_666"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_17">

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修类型： 挖掘机全体"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:drawableLeft="@mipmap/jl"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="距离：500km"
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_17"
                android:background="@drawable/rect_radio_6_g"
                android:drawableLeft="@mipmap/details_address_icon"
                android:drawableRight="@mipmap/details_next_icon"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="所在地：广州市海珠区新港东路保利世界贸易中心12号"
                android:textColor="@color/color_222"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_17"
                android:paddingRight="@dimen/dp_17">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:text="服务范围"
                    android:textColor="@color/color_222"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text=""
                    android:textColor="@color/color_222"
                    android:textSize="16sp" />

            </LinearLayout>

            <View style="@style/h_view_6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="179dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/ly_comment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_17"
                    android:paddingRight="@dimen/dp_17">

                    <TextView
                        android:id="@+id/tv_comment_num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="评论（999+）"
                        android:textColor="@color/color_222"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/details_next_icon"
                        android:drawablePadding="@dimen/dp_10"
                        android:text="查看更多"
                        android:textColor="#4484FF"
                        android:textSize="13sp" />
                </LinearLayout>

                <View style="@style/h_view_1" />

                <include layout="@layout/item_factory_comment" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_17"
        android:paddingRight="@dimen/dp_17">

        <TextView
            android:id="@+id/tv_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/report_icon"
            android:drawablePadding="@dimen/dp_5"
            android:text="举报"
            android:textColor="@color/color_222"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_collected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:drawableTop="@drawable/details_collect_icon"
            android:drawablePadding="@dimen/dp_5"
            android:text="收藏"
            android:textColor="@color/color_222"
            android:textSize="@dimen/sp_13" />

        <LinearLayout
            android:id="@+id/ly_chat"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="35dp"
            android:layout_weight="1"
            android:background="@drawable/rect_half_radio"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:drawableLeft="@mipmap/details_msg"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:text="私信"
                android:textColor="@color/color_222"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_call"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/rect_half_radio_y"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:drawableLeft="@mipmap/details_phone"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:text="电话"
                android:textColor="@color/color_222"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>