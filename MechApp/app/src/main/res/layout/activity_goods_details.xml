<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white">


    <include layout="@layout/layout_left_right_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_marginBottom="@dimen/dp_63"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="210dp" />

            <TextView
                android:id="@+id/tv_details_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_17"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_17"
                android:text="回转支承旋转轴承大型吊车挖掘机专用配件支持大小型吊车挖掘机使用"
                android:textColor="@color/color_222"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_17"
                android:paddingRight="@dimen/dp_17">

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥ 999"
                    android:textColor="#FC3D38"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_sell_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_35"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="销量：178件"
                    android:textColor="@color/color_999"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@mipmap/goods_details_share_icon" />
            </LinearLayout>

            <View
                style="@style/h_view_1"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_17" />


            <LinearLayout
                android:id="@+id/ly_specs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_17"
                android:paddingRight="@dimen/dp_17">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已选规格："
                    android:textColor="@color/color_222"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_specs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_weight="1"
                    android:text="暂未选择"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/details_next_icon" />

            </LinearLayout>

            <View style="@style/h_view_6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="179dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ly_comment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_17"
                    android:paddingRight="@dimen/dp_17">

                    <TextView
                        android:id="@+id/tv_comment_num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="评论"
                        android:textColor="@color/color_222"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/details_next_icon"
                        android:drawablePadding="@dimen/dp_10"
                        android:text="查看更多"
                        android:textColor="#4484FF"
                        android:textSize="13sp" />
                </LinearLayout>

                <View style="@style/h_view_1" />

                <include layout="@layout/item_comment" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_30"
                android:text="商品详情"
                android:textColor="@color/color_222"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_17"
                android:text=""
                android:textColor="@color/color_222"
                android:textSize="16sp" />

            <View
                style="@style/h_view_1"
                android:layout_marginTop="@dimen/dp_20" />

            <LinearLayout
                android:id="@+id/ly_user_info"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginBottom="@dimen/dp_35"
                android:background="@drawable/rect_radio_6_g"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12">

                <ImageView
                    android:id="@+id/iv_user_pic"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tv_user_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="昵称：谭老板"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/iv_sr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:src="@mipmap/sr" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/details_next_icon" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_17"
        android:paddingRight="@dimen/dp_17">

        <TextView
            android:id="@+id/tv_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/service_icon"
            android:drawablePadding="@dimen/dp_5"
            android:text="客服"
            android:textColor="@color/color_222"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_collected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:drawableTop="@drawable/details_collect_icon"
            android:drawablePadding="@dimen/dp_5"
            android:text="收藏"
            android:textColor="@color/color_222"
            android:textSize="@dimen/sp_13" />

        <LinearLayout
            android:id="@+id/ly_add_shop_car"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="35dp"
            android:layout_weight="1"
            android:background="@drawable/rect_half_radio"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="加入购物车"
                android:textColor="@color/color_222"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_buy"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/rect_half_radio_y"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="立即购买"
                android:textColor="@color/color_222"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>