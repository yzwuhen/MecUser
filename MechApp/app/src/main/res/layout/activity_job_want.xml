<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dp_17">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="求职详情"
                android:textColor="@color/color_222"
                android:textSize="@dimen/sp_18" />

            <LinearLayout style="@style/ly_style_h">

                <TextView
                    style="@style/tv_style_left1"
                    android:text="求职意向" />
                <EditText
                    android:id="@+id/et_post_name"
                    android:hint="请输入求职意向岗位"
                    style="@style/et_style" />
            </LinearLayout>



            <View style="@style/h_view_1" />
            <LinearLayout
                android:id="@+id/ly_work_type"
                style="@style/ly_style_h">

                <TextView
                    style="@style/tv_style_left1"
                    android:text="选择工种" />
                <TextView
                    android:hint="请选择工种"
                    android:id="@+id/et_work_type"
                    style="@style/et_style" />
                <TextView
                    android:text=">"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View style="@style/h_view_1" />
            <LinearLayout
                android:id="@+id/ly_work_experience"
                style="@style/ly_style_h">

                <TextView
                    style="@style/tv_style_left1"
                    android:text="工作经验" />
                <TextView
                    android:hint="请选择工作经验"
                    android:id="@+id/et_work_experience"
                    style="@style/et_style" />
                <TextView
                    android:text=">"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View style="@style/h_view_1" />

            <LinearLayout
                android:id="@+id/ly_salary"
                style="@style/ly_style_h">

                <TextView
                    style="@style/tv_style_left1"
                    android:text="期望薪资" />
                <TextView
                    android:hint="请选择期望薪资"
                    android:id="@+id/et_salary"
                    style="@style/et_style" />

                <TextView
                    android:text=">"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View style="@style/h_view_1" />


            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/tv_style_left"
                    android:layout_width="wrap_content"
                    android:text="是否随时上岗" />

                <TextView
                    android:id="@+id/tv_yes"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/check_icon"
                    android:drawablePadding="@dimen/dp_5"
                    android:textSize="16sp"
                    android:textColor="@color/color_222"
                    android:text="是"/>

                <TextView
                    android:id="@+id/tv_no"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/check_icon"
                    android:drawablePadding="@dimen/dp_5"
                    android:textSize="16sp"
                    android:textColor="@color/color_222"
                    android:text="否"/>

            </LinearLayout>


            <View style="@style/h_view_1" />
            <LinearLayout style="@style/ly_style_h">

                <TextView
                    style="@style/tv_style_left1"
                    android:text="联  系  人" />
                <EditText
                    android:hint="请输入联系人姓名"
                    android:id="@+id/et_contacts"
                    style="@style/et_style" />
            </LinearLayout>

            <View style="@style/h_view_1" />

            <LinearLayout
                android:id="@+id/ly_birth_day"
                style="@style/ly_style_h">

                <TextView
                    style="@style/tv_style_left1"
                    android:text="出生年月" />
                <TextView
                    android:hint="请选择出生年月"
                    android:id="@+id/et_birthday"
                    style="@style/et_style" />
                <TextView
                    android:text=">"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <View style="@style/h_view_1" />


            <LinearLayout style="@style/ly_style_h">

                <TextView
                    style="@style/tv_style_left1"
                    android:text="电     话" />
                <EditText
                    android:hint="请输入联系电话"
                    android:id="@+id/et_phone"
                    style="@style/et_style" />
            </LinearLayout>


            <View style="@style/h_view_1" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:text="个人简介"
                android:textStyle="bold"
                android:textColor="@color/color_222"
                android:textSize="@dimen/sp_18" />


            <FrameLayout
                android:layout_width="match_parent"
                android:background="@drawable/rect_radio_6_g"
                android:layout_height="146dp">
                <EditText
                    android:id="@+id/et_input"
                    android:textColorHint="@color/color_999"
                    android:textColor="@color/color_222"
                    android:paddingLeft="@dimen/dp_17"
                    android:paddingTop="@dimen/dp_17"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/200"
                    android:textColor="@color/color_999"
                    android:layout_marginRight="13dp"
                    android:layout_marginBottom="13dp"
                    android:textSize="11sp"
                    android:layout_gravity="end|bottom"/>

            </FrameLayout>


            <TextView
                android:id="@+id/tv_submit"
                android:layout_marginTop="@dimen/dp_45"
                android:layout_width="match_parent"
                android:textSize="17sp"
                android:gravity="center"
                android:background="@drawable/submit_bg"
                android:text="提交发布"
                android:textColor="@color/color_222"
                android:layout_height="56dp"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>