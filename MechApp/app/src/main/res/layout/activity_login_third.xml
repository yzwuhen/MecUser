<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_logo"
            android:layout_marginTop="@dimen/dp_85"
            android:gravity="center"
            android:text="189********7587"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="314dp"
            android:layout_height="45dp"
            android:layout_below="@+id/tv_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/login_btn_bg"
            android:gravity="center"
            android:text="本机号码一键登录"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/tv_other_login"
            android:layout_width="314dp"
            android:layout_height="45dp"
            android:layout_below="@+id/tv_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="center"
            android:text="其他方式登录"
            android:textColor="@color/color_999"
            android:textSize="@dimen/sp_16" />


        <LinearLayout
            android:id="@+id/ly_third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ly_bottom"
            android:layout_marginBottom="@dimen/dp_30"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ly_wx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@mipmap/share_wx" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@mipmap/share_qq" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ly_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_35"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/login_check"
                android:drawablePadding="@dimen/dp_10"
                android:text="已阅读并同意"
                android:textColor="@color/color_999"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_10"
                android:text="《用户协议》"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_10"
                android:text="和"
                android:textColor="@color/color_999"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_10"
                android:text="《隐私政策》"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>