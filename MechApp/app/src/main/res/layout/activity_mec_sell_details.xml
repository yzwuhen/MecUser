<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_left_right_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_marginBottom="@dimen/dp_63"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                />

            <LinearLayout
                android:id="@+id/ly_lease_user_info"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/dp_17"
                android:gravity="center_vertical"
                android:layout_height="@dimen/dp_45">

                <ImageView
                    android:id="@+id/iv_lease_user_pic"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@mipmap/user_default"/>
                <TextView
                    android:id="@+id/tv_lease_user_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="昵称：谭老板"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/tv_lease_user_sr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:src="@mipmap/sr" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingRight="@dimen/dp_17"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_details_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_17"
                    android:text="卡特彼勒D11T推土机 出租"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/color_222"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_label"
                    android:layout_width="37dp"
                    android:layout_height="19dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/label_bg"
                    android:gravity="center"
                    android:text="新机"
                    android:textColor="#FE9418"
                    android:textSize="12sp"
                     />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_17">

                <TextView
                    android:id="@+id/tv_browse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/browse_icon"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="浏览量：12940"
                    android:textColor="@color/color_666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_browse_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_35"
                    android:text="前天21：10"
                    android:textColor="@color/color_666"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_20"
                android:text="￥2W/月"
                android:textColor="#FC3D38"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_17"
                android:background="@drawable/rect_radio_6_g"
                android:drawableLeft="@mipmap/details_address_icon"
                android:drawableRight="@mipmap/details_next_icon"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="所在地：广州市海珠区新港东路保利世界贸易中心12号"
                android:textColor="@color/color_222"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_17"
                android:paddingRight="@dimen/dp_17">

                <TextView
                    android:id="@+id/tv_mec_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="设备详情"
                    android:textColor="@color/color_222"
                    android:textSize="@dimen/sp_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="机械类型："
                        android:textColor="@color/color_666"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_mec_type"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="推土机"
                        android:textColor="@color/color_222"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="出厂时间:："
                        android:textColor="@color/color_666"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_factory_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text=""
                        android:textColor="@color/color_222"
                        android:textSize="15sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="机械品牌："
                        android:textColor="@color/color_666"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_mec_brand"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/color_222"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="工作时长:"
                        android:textColor="@color/color_666"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_work_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text=""
                        android:textColor="@color/color_222"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="机械型号："
                        android:textColor="@color/color_666"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_mec_model"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="1200/小时"
                        android:textColor="@color/color_222"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="支付方式:"
                        android:textColor="@color/color_666"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_cost_way"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="可面议"
                        android:textColor="@color/color_222"
                        android:textSize="15sp" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:text="机械简介"
                    android:textColor="@color/color_222"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="卡特彼勒D11T推土机主要用来开挖路堑、构筑路堤、回填基坑、铲除障碍、清除积雪、乎整场地等，也可完成短距离松散物料"
                    android:textColor="@color/color_222"
                    android:textSize="16sp" />

                <View
                    style="@style/h_view_1"
                    android:layout_marginTop="@dimen/dp_20" />

                <LinearLayout
                    android:id="@+id/ly_user_info"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_marginBottom="@dimen/dp_35"
                    android:background="@drawable/rect_radio_6_g"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12">

                    <ImageView
                        android:id="@+id/iv_user_pic"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/tv_user_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:text="昵称：谭老板"
                        android:textColor="@color/color_666"
                        android:textSize="@dimen/sp_16" />

                    <ImageView
                        android:id="@+id/iv_sr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:src="@mipmap/sr" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/details_next_icon" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_17"
        android:paddingRight="@dimen/dp_17">

        <TextView
            android:id="@+id/tv_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/report_icon"
            android:drawablePadding="@dimen/dp_5"
            android:text="举报"
            android:textColor="@color/color_222"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_collected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:drawableTop="@mipmap/details_collected"
            android:drawablePadding="@dimen/dp_5"
            android:text="收藏"
            android:textColor="@color/color_222"
            android:textSize="@dimen/sp_13" />
        <LinearLayout
            android:id="@+id/ly_chat"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="35dp"
            android:layout_weight="1"
            android:background="@drawable/rect_half_radio"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:drawableLeft="@mipmap/details_msg"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:text="私信"
                android:textColor="@color/color_222"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_call"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/rect_half_radio_y"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:drawableLeft="@mipmap/details_phone"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:text="电话"
                android:textColor="@color/color_222"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>