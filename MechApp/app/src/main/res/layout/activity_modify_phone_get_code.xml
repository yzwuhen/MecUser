<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_45"
        android:orientation="vertical"
        android:padding="@dimen/dp_17">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="已绑定手机号码：13061***444"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_40"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rect_radio_6_g"
                android:hint="请输入验证码"
                android:textColor="@color/color_222"
                android:textColorHint="#cacaca"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:background="@drawable/rect_radio_6_fff_cacaca"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/color_222"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_next"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:textSize="17sp"
        android:layout_margin="@dimen/dp_17"
        android:gravity="center"
        android:background="@drawable/rect_radio_6_cacaca"
        android:text="下一步"
        android:textColor="@color/color_222"
        android:layout_height="56dp"/>

</FrameLayout>