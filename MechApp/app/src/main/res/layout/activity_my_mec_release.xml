<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dp_17">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出租详情"
                android:textColor="@color/color_222"
                android:textSize="@dimen/sp_18" />

            <LinearLayout style="@style/ly_style_h">

                <TextView
                    style="@style/tv_style_left1"
                    android:text="机械名称" />

                <TextView
                    android:id="@+id/et_ec_name"
                    style="@style/et_style"
                    android:hint="请输入机械名称" />
            </LinearLayout>

            <View style="@style/h_view_1" />

            <LinearLayout style="@style/ly_style_h">

                <TextView
                    style="@style/tv_style_left"
                    android:text="计费方式" />

                <EditText
                    android:id="@+id/et_way"
                    style="@style/et_style"
                    android:hint="请输入计费方式"
                    android:inputType="numberDecimal" />

                <View style="@style/v_view_1" />

                <TextView
                    android:id="@+id/tv_way"
                    style="@style/tv_style_left"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="元/月" />

            </LinearLayout>

            <View style="@style/h_view_1" />

            <LinearLayout
                android:id="@+id/ly_ec_type"
                style="@style/ly_style_h">

                <TextView
                    style="@style/tv_style_left"
                    android:text="机械类型" />

                <TextView
                    android:id="@+id/et_ec_type"
                    style="@style/et_style"
                    android:hint="请选择机械类型" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">" />
            </LinearLayout>

            <View style="@style/h_view_1" />

            <LinearLayout
                android:id="@+id/ly_ec_brand"
                style="@style/ly_style_h">

                <TextView
                    style="@style/tv_style_left"
                    android:text="机械品牌" />

                <TextView
                    android:id="@+id/et_ec_brand"
                    style="@style/et_style"
                    android:hint="请选择机械品牌" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">" />
            </LinearLayout>

            <View style="@style/h_view_1" />

            <LinearLayout
                android:id="@+id/ly_ec_model"
                style="@style/ly_style_h">

                <TextView
                    style="@style/tv_style_left"
                    android:text="机械型号" />

                <TextView
                    android:id="@+id/et_ec_model"
                    style="@style/et_style"
                    android:hint="请选择机械型号" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">" />
            </LinearLayout>

            <View style="@style/h_view_1" />

            <LinearLayout style="@style/ly_style_h">

                <TextView
                    style="@style/tv_style_left"
                    android:text="工作时长" />

                <TextView
                    android:id="@+id/et_work_time"
                    style="@style/et_style"
                    android:hint="请输入工作时长"
                    android:inputType="numberDecimal" />

                <View style="@style/v_view_1" />

                <TextView
                    style="@style/tv_style_left"
                    android:text="/小时" />
            </LinearLayout>

            <View style="@style/h_view_1" />

            <LinearLayout style="@style/ly_style_h">

                <TextView
                    style="@style/tv_style_left1"
                    android:text="电     话" />

                <TextView
                    android:id="@+id/et_phone"
                    style="@style/et_style"
                    android:hint="请输入联系电话"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <View style="@style/h_view_1" />

            <LinearLayout style="@style/ly_style_h">

                <TextView
                    style="@style/tv_style_left1"
                    android:text="联 系 人" />

                <TextView
                    android:id="@+id/et_name"
                    style="@style/et_style"
                    android:hint="请输入联系人姓名" />
            </LinearLayout>

            <View style="@style/h_view_1" />

            <LinearLayout
                android:id="@+id/ly_production_time"
                style="@style/ly_style_h">

                <TextView
                    style="@style/tv_style_left1"
                    android:text="出厂日期" />

                <TextView
                    android:id="@+id/et_production_time"
                    style="@style/tv_style_right"
                    android:hint="请选择出厂日期"
                    android:paddingLeft="@dimen/dp_10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">" />
            </LinearLayout>

            <View style="@style/h_view_1" />

            <LinearLayout
                android:id="@+id/ly_address"
                style="@style/ly_style_h">

                <TextView
                    style="@style/tv_style_left1"
                    android:text="地        址" />

                <TextView
                    android:id="@+id/et_address"
                    style="@style/et_style" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/address" />
            </LinearLayout>

            <View style="@style/h_view_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="机械简介"
                android:textColor="@color/color_222"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:background="@drawable/rect_radio_6_g">

                <TextView
                    android:id="@+id/et_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="start"
                    android:paddingLeft="@dimen/dp_17"
                    android:paddingTop="@dimen/dp_17"
                    android:textColor="@color/color_222"
                    android:textColorHint="@color/color_999" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_marginRight="13dp"
                    android:layout_marginBottom="13dp"
                    android:text="0/200"
                    android:textColor="@color/color_999"
                    android:textSize="11sp" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView

                    style="@style/tv_style_left"
                    android:layout_width="wrap_content"
                    android:text="添加图片、视频" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="（前方左右45角度照片两张+后方一张，至少一张照片)"
                    android:textColor="@color/color_666"
                    android:textSize="11sp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ry_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17" />

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="@dimen/dp_45"
                android:background="@drawable/submit_bg"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/color_222"
                android:textSize="17sp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>