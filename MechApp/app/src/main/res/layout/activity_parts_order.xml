<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_17"
        android:paddingRight="@dimen/dp_17">

        <TextView
            android:id="@+id/tv_order1"
            style="@style/tv_order"
            android:gravity="center"
            android:text="全部" />

        <TextView
            android:id="@+id/tv_order2"
            style="@style/tv_order"
            android:gravity="center"
            android:text="待发货" />

        <TextView
            android:id="@+id/tv_order3"
            style="@style/tv_order"
            android:gravity="center"
            android:text="待收货" />

        <TextView
            android:id="@+id/tv_order4"
            style="@style/tv_order"
            android:gravity="center"
            android:text="待评价" />

        <TextView
            android:id="@+id/tv_order5"
            style="@style/tv_order"
            android:gravity="center"
            android:text="退款/售后" />



    </LinearLayout>

    <com.example.mechanicalapp.ui.view.CusViewPage
        android:id="@+id/cus_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>