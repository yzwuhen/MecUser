<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_45"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_17"
        android:paddingRight="@dimen/dp_17">

        <LinearLayout
            android:id="@+id/ly_modify_phone"
            style="@style/ly_style_h">

            <TextView
                style="@style/tv_setting_style_left"
                android:text="更改手机号码" />

            <TextView
                style="@style/tv_setting_style_right"
                android:drawableRight="@mipmap/right_tip" />
        </LinearLayout>

        <View style="@style/h_view_1" />


        <LinearLayout
            android:id="@+id/ly_shock"
            style="@style/ly_style_h">

            <TextView
                style="@style/tv_setting_style_left"
                android:text="震动提示" />
            <ImageView
                android:layout_width="@dimen/dp_63"
                android:layout_height="@dimen/dp_35"
                android:src="@drawable/swtich_icon"/>

<!--            <TextView-->
<!--                style="@style/tv_setting_style_right"-->
<!--                android:drawableRight="@drawable/swtich_icon" />-->
        </LinearLayout>

        <View style="@style/h_view_1" />

        <LinearLayout
            android:id="@+id/ly_voice"
            style="@style/ly_style_h">

            <TextView
                style="@style/tv_setting_style_left"
                android:text="消息声音" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/swtich_icon"/>
        </LinearLayout>

        <View style="@style/h_view_1" />

        <LinearLayout
            android:id="@+id/ly_modify_pwd"
            style="@style/ly_style_h">

            <TextView
                style="@style/tv_setting_style_left"
                android:text="密码更换" />

            <TextView
                style="@style/tv_setting_style_right"
                android:drawableRight="@mipmap/right_tip" />
        </LinearLayout>

        <View style="@style/h_view_1" />

        <LinearLayout
            android:id="@+id/ly_clear"
            style="@style/ly_style_h">

            <TextView
                style="@style/tv_setting_style_left"
                android:text="清除缓存" />

            <TextView
                android:id="@+id/tv_cache"
                style="@style/tv_setting_style_right"
                android:drawableRight="@mipmap/right_tip"
                android:text="660M" />
        </LinearLayout>

        <View style="@style/h_view_1" />

        <LinearLayout
            android:id="@+id/ly_update"
            style="@style/ly_style_h">

            <TextView
                style="@style/tv_setting_style_left"
                android:text="检查更新" />

            <TextView
                style="@style/tv_setting_style_right"
                android:drawableRight="@mipmap/right_tip"
                android:text="版本1.0.0" />
        </LinearLayout>

        <View style="@style/h_view_1" />

        <LinearLayout
            android:id="@+id/ly_about_us"
            style="@style/ly_style_h">

            <TextView
                style="@style/tv_setting_style_left"
                android:text="关于我们" />

            <TextView
                style="@style/tv_setting_style_right"
                android:drawableRight="@mipmap/right_tip" />
        </LinearLayout>

        <View style="@style/h_view_1" />

        <LinearLayout
            android:id="@+id/ly_reset_user"
            style="@style/ly_style_h">

            <TextView
                style="@style/tv_setting_style_left"
                android:text="注销用户" />

            <TextView
                style="@style/tv_setting_style_right"
                android:drawableRight="@mipmap/right_tip" />
        </LinearLayout>

        <View style="@style/h_view_1" />

        <LinearLayout
            android:id="@+id/ly_login_out"
            style="@style/ly_style_h">

            <TextView
                style="@style/tv_setting_style_left"
                android:text="退出登录" />

            <TextView
                style="@style/tv_setting_style_right"
                android:drawableRight="@mipmap/right_tip" />
        </LinearLayout>

        <View style="@style/h_view_1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="《用户协议》"
            android:textColor="@color/color_333"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="和《隐私政策》"
            android:textColor="@color/color_333"
            android:textSize="11sp" />
    </LinearLayout>


</FrameLayout>