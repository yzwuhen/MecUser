<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_title" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="@dimen/dp_85"
            android:layout_marginRight="54dp"
            android:text="密码"
            android:textColor="@color/color_9a"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/et_pwd1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请设置登录密码"
                android:inputType="textPassword"
                android:textColor="@color/color_222"
                android:textColorHint="@color/color_ccc"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_pwd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pw_n" />
        </LinearLayout>

        <View
            style="@style/h_view_1"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="54dp"
            android:text="确认密码"
            android:textColor="@color/color_9a"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/wt_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请再次输入密码"
                android:inputType="textPassword"
                android:textColor="@color/color_222"
                android:textColorHint="@color/color_ccc"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_pwd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pw_n" />
        </LinearLayout>

        <View
            style="@style/h_view_1"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="54dp" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="314dp"
            android:layout_height="45dp"
            android:layout_below="@+id/tv_phone"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="110dp"
            android:background="@drawable/login_btn_bg"
            android:gravity="center"
            android:text="确认修改"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />


    </LinearLayout>


</FrameLayout>