<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_17">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/iv_dialog_goods_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/iv_dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/spec_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_dialog_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_25"
            android:text="￥999"
            android:textColor="#FC3D38"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/iv_dialog_goods_pic"
            app:layout_constraintTop_toTopOf="@+id/iv_dialog_goods_pic" />

        <TextView
            android:id="@+id/tv_dialog_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="回转支承旋转轴承大型吊车挖掘机专用配件支持大小型吊车挖掘机使用"
            android:textColor="@color/color_222"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="@+id/iv_dialog_goods_pic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_dialog_money" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_spec1"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="型号"
        android:textColor="@color/color_222"
        android:textSize="@dimen/sp_16" />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/dp_8"
        android:id="@+id/recycler_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/dp_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_spec2"
        android:text="尺寸"
        android:textColor="@color/color_222"
        android:textSize="@dimen/sp_16" />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/dp_8"
        android:id="@+id/recycler_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_dialog_submit"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_width="match_parent"
        android:textSize="17sp"
        android:gravity="center"
        android:background="@drawable/rect_radio_6_y"
        android:text="确定"
        android:textColor="@color/color_222"
        android:layout_height="56dp"/>


</LinearLayout>