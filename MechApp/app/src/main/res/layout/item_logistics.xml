<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_size_80"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="@dimen/dp_size_100"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="sj" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5">

        <View
            android:id="@+id/v_line1"
            style="@style/v_view_1"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/circle_yellow" />

        <View
            android:id="@+id/v_line2"
            style="@style/v_view_1"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <!--        <TextView-->
        <!--            android:id="@+id/tv_logistics_status"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="已签收" />-->

        <TextView
            android:id="@+id/tv_logistics_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="浙江省绍兴市诸暨市公司】 已收件 取件人: 朱奕磊 (13989512987)" />
    </LinearLayout>

</LinearLayout>