<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/dp_17"
    android:paddingRight="@dimen/dp_17"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginBottom="@dimen/dp_10"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:layout_width="@dimen/dp_63"
        android:layout_height="27dp"
        android:background="@mipmap/xsj"
        android:gravity="center"
        android:text="新上架"
        android:textSize="13sp"
        android:textColor="#2F2819"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iv_pic"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="这圆圈就是用来添加约束的这圆圈就是用来添加约束的"
        android:textColor="#222222"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_pic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_address_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="13sp"
        android:textColor="#666666"
        android:text="广东深圳 | 2020"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/jl"
        android:drawablePadding="3dp"
        android:textColor="#3A7EFF"
        android:textSize="13sp"
        android:text="距离205km"
        app:layout_constraintTop_toTopOf="@id/tv_address_data"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="37dp"
        android:layout_height="19dp"
        android:gravity="center"
        android:text="新机"
        android:textColor="#FE9418"
        android:textSize="12sp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/label_bg"
        app:layout_constraintStart_toStartOf="@id/tv_address_data"
        app:layout_constraintTop_toBottomOf="@+id/tv_address_data"
        />

    <ImageView
        android:id="@+id/iv_sr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/sr"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_17"
        app:layout_constraintStart_toEndOf="@id/tv_label"
        app:layout_constraintTop_toBottomOf="@id/tv_address_data"
        />

    <ImageView
        android:id="@+id/iv_qy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/qy"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@id/iv_sr"
        app:layout_constraintTop_toBottomOf="@id/tv_address_data"
        />

    <TextView
        android:id="@+id/tv_work_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="工作时长：2小时"
        android:textColor="#666666"
        android:textSize="13sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_distance"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/tv_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥1000/月"
        android:textColor="#FC3D38"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_pic"
        app:layout_constraintStart_toStartOf="@+id/tv_address_data"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刚刚"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_pic"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>