<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/dp_17"
    android:paddingRight="@dimen/dp_20"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingTop="20dp"
    android:background="#fff"
    android:paddingBottom="@dimen/dp_20"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_hot_apparatus"
        android:text="@string/hot_apparatus"
        android:textColor="#222222"
        android:textSize="@dimen/sp_18"
        android:drawableLeft="@drawable/tv_h_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_digger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_hot_apparatus"
        app:cardCornerRadius="3dp"
        app:cardElevation="@dimen/dp_5"
        >
        <ImageView
            android:src="@mipmap/wjj"
            android:layout_width="165dp"
            android:layout_height="185dp"
            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cd_rotary_machine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintStart_toEndOf="@+id/cd_digger"
        app:layout_constraintTop_toTopOf="@+id/cd_digger"
        app:cardCornerRadius="3dp"
        app:cardElevation="@dimen/dp_5"
        >
        <ImageView
            android:src="@mipmap/xwj"
            android:layout_width="210dp"
            android:layout_height="89dp"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_bulldozer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintStart_toEndOf="@+id/cd_digger"
       app:layout_constraintBottom_toBottomOf="@+id/cd_digger"
        app:cardCornerRadius="3dp"
        app:cardElevation="@dimen/dp_5"
        >
        <ImageView
            android:src="@mipmap/ttj"
            android:layout_width="210dp"
            android:layout_height="89dp"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_truck_crane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@+id/cd_digger"
        app:layout_constraintTop_toBottomOf="@+id/cd_digger"
        app:cardCornerRadius="3dp"
        app:cardElevation="@dimen/dp_5"
        >
        <ImageView
            android:src="@mipmap/qcd"
            android:layout_width="123dp"
            android:layout_height="172dp"
            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cd_bc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintStart_toEndOf="@+id/cd_truck_crane"
        app:layout_constraintTop_toBottomOf="@+id/cd_digger"
        app:cardCornerRadius="3dp"
        app:cardElevation="@dimen/dp_5"
        >
        <ImageView
            android:src="@mipmap/bc"
            android:layout_width="123dp"
            android:layout_height="172dp"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_zzj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintStart_toEndOf="@+id/cd_bc"
        app:layout_constraintTop_toBottomOf="@+id/cd_digger"
        app:cardCornerRadius="3dp"
        app:cardElevation="@dimen/dp_5"
        >
        <ImageView
            android:src="@mipmap/zzj"
            android:layout_width="123dp"
            android:layout_height="172dp"
            />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>