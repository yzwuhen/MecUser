<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/dp_17"
    android:paddingRight="@dimen/dp_20"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingTop="20dp"
    android:background="#fff"
    android:paddingBottom="@dimen/dp_20"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_hot_apparatus"
        android:text="@string/hot_apparatus"
        android:textColor="#222222"
        android:textSize="@dimen/sp_18"
        android:drawableLeft="@drawable/tv_h_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/cd_digger"
            android:src="@mipmap/wjj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_hot_apparatus"
            />

        <ImageView
            android:id="@+id/cd_rotary_machine"
            android:src="@mipmap/xwj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/cd_digger"
            app:layout_constraintTop_toTopOf="@+id/cd_digger"
            />

        <ImageView
            android:id="@+id/cd_bulldozer"
            android:src="@mipmap/ttj"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/cd_digger"
            app:layout_constraintBottom_toBottomOf="@+id/cd_digger"
            />

        <ImageView
            android:id="@+id/cd_truck_crane"
            android:src="@mipmap/qcd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/cd_digger"
            app:layout_constraintTop_toBottomOf="@+id/cd_digger"
            />

        <ImageView
            android:id="@+id/cd_bc"
            android:src="@mipmap/bc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/cd_truck_crane"
            app:layout_constraintTop_toBottomOf="@+id/cd_digger"
            />

        <ImageView
            android:id="@+id/cd_zzj"
            android:src="@mipmap/zzj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/cd_bc"
            app:layout_constraintTop_toBottomOf="@+id/cd_digger"
            />


</androidx.constraintlayout.widget.ConstraintLayout>