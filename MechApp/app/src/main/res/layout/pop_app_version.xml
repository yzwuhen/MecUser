<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:background="@drawable/rect_radio_6_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pop_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="更新内容"
            android:textColor="@color/color_222"
            android:textSize="@dimen/dp_18" />

        <View style="@style/h_view_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pop_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/color_ffb923"
                android:textSize="@dimen/sp_14" />

            <View style="@style/v_view_1" />

            <TextView
                android:id="@+id/tv_pop_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_222"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>