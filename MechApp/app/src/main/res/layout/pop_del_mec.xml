<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:background="@drawable/rect_radio_6_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pop_info"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="是否删除设备"
            android:textColor="@color/color_222"
            android:textSize="@dimen/sp_16" />

        <View style="@style/h_view_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pop_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_45"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_222"
                android:textSize="15sp" />

            <View
                style="@style/v_view_1"
                android:layout_height="23dp" />

            <TextView
                android:id="@+id/tv_pop_sure"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_45"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/color_ffb923"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>