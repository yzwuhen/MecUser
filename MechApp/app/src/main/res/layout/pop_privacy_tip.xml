<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:background="@drawable/rect_radio_6_white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_pop_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="打开隐私设置"
            android:textColor="@color/color_222"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_pop_tip"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="24dp"
            android:text="您发帖中的联系电话对方将无法获取
            只能通过在线聊天跟您联系！"
            android:textColor="@color/color_222"
            android:textSize="15sp" />

        <View style="@style/h_view_1" />

        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_pop_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_666"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_pop_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/color_ffb923"
                android:textSize="17sp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>